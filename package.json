    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tailwindcss": "^3.10.0",
    "eslint-plugin-testing-library": "^5.10.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "next-sitemap": "^3.1.55",
    "@ducanh2912/next-pwa": "^8.0.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "typescript": "4.9.5",
    "vitest": "^0.29.2",
    "tailwindcss": "^3.2.7"
  }
