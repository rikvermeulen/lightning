{
  "name": "lightning",
  "version": "0.1.0",
  "description": "Project: Lightning",
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rikvermeulen/lightning"
  },
  "scripts": {
    "dev": "next dev --turbo && NODE_ENV=development",
    "build": "next build && NODE_ENV=production",
    "start": "next start",
    "preview": "next build && next start && NODE_ENV=test",
    "lint": "next lint",
    "prepare": "husky install",
    "format": "next lint --fix && prettier --write \"**/*.{ts,tsx,mdx}\" --ignore-path .gitignore",
    "check-types": "tsc --noEmit",
    "check-updates": "ncu -u && npm i"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.6.1",
    "next": "^13.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/cz-commitlint": "^17.7.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/node": "20.8.0",
    "@types/prettier": "^2.7.3",
    "@types/react": "18.2.24",
    "@types/react-dom": "18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.50.0",
    "eslint-config-next": "^13.5.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.3",
    "typescript": "5.2.2"
  }
}
